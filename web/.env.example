# Naver API Keys
# Get your keys at: https://developers.naver.com/
NAVER_CLIENT_ID=your_naver_client_id_here
NAVER_CLIENT_SECRET=your_naver_client_secret_here

# Next.js
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# OpenAI API for ontology analysis
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/kss_ontology

# ============================================
# Phase 3: Scheduler & Notification Settings
# ============================================

# Scheduler: Enable/Disable Jobs
# Set to 'true' to enable, 'false' to disable
ENABLE_DAILY_BATCH=false
ENABLE_WEEKLY_REEVALUATION=false
ENABLE_MONTHLY_ARCHIVING=false
ENABLE_HEALTH_CHECK=false

# Notification: Slack Webhook
# Get webhook URL from Slack App Settings
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Notification: Discord Webhook
# Get webhook URL from Discord Server Settings > Integrations
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK/URL

# Notification: Email (for future implementation)
# NOTIFICATION_EMAIL=admin@example.com
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# ============================================
# Redis Caching (Phase 3 Medium Priority)
# ============================================

# Redis Enable/Disable
# Set to 'true' to enable Redis caching, 'false' to disable
ENABLE_REDIS=false

# Redis Connection URL
# Local Redis: redis://localhost:6379
# Upstash Redis: redis://:password@host:port
REDIS_URL=redis://localhost:6379

# ============================================
# Authentication (Phase 3)
# ============================================

# API Key for External Access
# Generate a strong random key: openssl rand -hex 32
API_KEY=your-api-key-here

# User Credentials (Development)
# Format: email:password:name:role,email2:password2:name2:role2
# Default: admin@kss.com:admin123:Admin:admin
AUTH_USERS=admin@kss.com:admin123:Admin:admin
